{
  "name": "root",
  "license": "MIT",
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "test": "rm -rf packages/*/dist && jest --coverage",
    "bootstrap": "lerna bootstrap --no-hoist --no-ci",
    "tsc": "lerna run tsc",
    "publish": "lerna run tsc && lerna publish"
  },
  "devDependencies":  {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.12.5",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lerna": "^3.4.3",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^23.10.4",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "typescript": "~3.1.6"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts"
    ],
    "testPathIgnorePatterns": [
      "packages/sample-todomvc-angular"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
