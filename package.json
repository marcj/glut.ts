{
    "name": "root",
    "license": "MIT",
    "engines": {
        "node": ">= 8.9.0"
    },
    "jest": {
        "testURL": "http://localhost/",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "collectCoverageFrom": [
            "**/*.{ts}",
            "!**/node_modules/**",
            "!**/lib/**/*",
            "!**/*.d.ts"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/*.spec.ts"
        ],
        "setupTestFrameworkScriptFile": "jest-extended"
    }
}
