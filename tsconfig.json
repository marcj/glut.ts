{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "mapRoot": "src/",
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "dist"
  ]
}
