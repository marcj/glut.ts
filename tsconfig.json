{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "target": "es2017",
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es2017",
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
